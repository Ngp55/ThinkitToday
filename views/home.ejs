  <script>
    // Get the textarea element
    var textarea = document.getElementById('richTextTextarea');
    
    // Split the content of the textarea into lines
    var lines = textarea.value.split('\n');
    
    // Extract the first 2 or 3 lines (adjust the number as needed)
    var extractedLines = lines.slice(0, 3).join('\n');
    
    // Display the extracted lines in the 'extractedText' div
    document.getElementById('extractedText').innerText = extractedLines;
  </script>
  
